{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pytest",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-s",                // Allows print statements to show in debug console
        "${workspaceFolder}/tests"  // path to your tests folder or specific test file
      ],
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
